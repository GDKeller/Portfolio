import { getCollection, getEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import FishHero from "../components/FishHero.astro";
import { Image } from "astro:assets";
import bgImage from "../images/bg_video_glitch.jpg";
import grantImg from "../images/GrantKeller_DavantSystems.png";
import nasaLogo from "../images/nasa-jpl-logo.png";
import nhmLogo from "../images/nhmla-logo.png";
import SkillsGrid from "../components/SkillsGrid.astro";
import Pill from "../components/Pill.astro";
---

