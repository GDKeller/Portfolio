      <defs>
        <linearGradient
          id="paint0_linear_1805_24383"
          x1="247.358"
          y1="0"
          x2="247.358"
          y2="622.479"
          gradientUnits="userSpaceOnUse"
        >
          <stop stop-opacity="0.9"></stop>
          <stop offset="1" stop-opacity="0.2"></stop>
        </linearGradient>
      </defs>
    </svg>
    <section class="bg-black pt-14 relative block z-0">
      <!-- <span class="absolute top-0 left-0 bottom-0 right-0 w-full h-full object-cover min-h-full opacity-20 bg-gradient-to-bl from-teal-500 to-indigo-950"></span> -->
      <!-- <span class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-purple-950 to-blue-950 z-0"></span> -->
      <div class="container mx-auto relative block z-50">
        <div class="mb-8">
          <div class="mb-12">
            <!-- <Image src={grantImg} alt="Grant Keller" class="rounded-full w-32 h-32 mx-auto" /> -->
            <h1 class="text-left">
              <span class="block text-6xl">Grant Keller </span><span
                class="text-3xl">Senior Software Engineer</span
              >
            </h1>
            <p class="text-xl mb-8">Hardware Tinkerer & Maker</p>

            <div class="flex">
              <Pill>Web - Frontentd & UX</Pill>
              <Pill>AI - Python</Pill>
              <Pill>Embedded - C++</Pill>
            </div>
          </div>

          <SkillsGrid />

          <div class="grid grid-cols-3">
            <div>
              <h3>protects scientific specimens</h3>
            </div>
            <div>
              <h3>protects scientific specimens</h3>
            </div>
            <div>
              <h3>protects scientific specimens</h3>
            </div>
          </div>
          <p>
            From the deepest ocean abyss
            <span class="block">to listening beyond the Milky Way</span>
            <span class="block"
              >to serving breaking news to 10+ million visitors</span
            >

            <span class="block mt-8"
              >Grant crafts the code that makes your project a stylish success.</span
            >
          </p>
        </div>
      </div>
      <div class="flex flex-row py-4 px-4 bg-black w-full relative">
        <div>
          <Image
            src={nasaLogo}
            alt="NASA JPL Logo"
            class="relative block h-20 object-contain"
          />
        </div>
        <div>
          <Image
            src={nhmLogo}
            alt="Natural History Museum of Los Angeles Logo"
            class="relative block h-20 object-contain"
          />
        </div>
      </div>
      <div class="bg overflow-hidden absolute top-0 left-0 w-full h-full z-0">
        <span
          class="bg-black opacity-80 absolute top-0 left-0 w-full h-full z-10"
        ></span>
        <span class="absolute top-0 left-0 w-full h-full">
          <Image
            src={bgImage}
            alt="Background"
            class="object-cover w-full h-full"
          />
        </span>
      </div>
    </section>

    <section class="block relative overflow-hidden z-10">
      <FishHero />
    </section>
  </main>

  <style>
    main {
      margin: auto;
      max-width: 100vw;
      font-size: 14px;
      line-height: 1.6;
    }
    .astro-a {
      position: absolute;
      top: -32px;
      left: 50%;
      transform: translatex(-50%);
      width: 220px;
      height: auto;
      z-index: -1;
    }
    h1 {
      /* font-size: 4rem; */
      /* font-weight: 700; */
      /* line-height: 1;
    text-align: center;
    margin-bottom: 1em; */
    }
    /* .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  } */
    .instructions {
      margin-bottom: 2rem;
      border: 1px solid rgba(var(--accent-light), 25%);
      background: linear-gradient(
        rgba(var(--accent-dark), 66%),
        rgba(var(--accent-dark), 33%)
      );
      padding: 1.5rem;
      border-radius: 8px;
    }
    .instructions code {
      font-size: 0.8em;
      font-weight: bold;
      background: rgba(var(--accent-light), 12%);
      color: rgb(var(--accent-light));
      border-radius: 4px;
      padding: 0.3em 0.4em;
    }
    .instructions strong {
      color: rgb(var(--accent-light));
    }
    .link-card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
      gap: 2rem;
      padding: 0;
    }
  </style>
</Layout>
