---
import Layout from "../layouts/Layout.astro";
import FishHero from "../components/FishHero.astro";
import { Image } from "astro:assets";
import bgImage from "../images/bg_video_glitch.jpg";
import grantImg from "../images/GrantKeller_DavantSystems.png";
import nasaLogo from "../images/nasa-jpl-logo.png";
import nhmLogo from "../images/nhmla-logo.png";
import SkillsGrid from "../components/SkillsGrid.astro";
import Pill from "../components/Pill.astro";
import Projects from "../components/Projects.astro";
import Jobs from "../components/Jobs.astro";
---

<Layout title="Grant Keller - Software Engineer">
  <main class="text-emerald-200">
    <section class="relative z-0 block bg-black pt-14">
      <!-- <span class="absolute top-0 bottom-0 left-0 right-0 object-cover w-full h-full min-h-full opacity-20 bg-gradient-to-bl from-teal-500 to-indigo-950"></span> -->
      <!-- <span class="absolute top-0 left-0 z-0 w-full h-full bg-gradient-to-br from-purple-950 to-blue-950"></span> -->
      <div class="container relative z-50 block mx-auto">
        <div class="mb-8">
          <div class="mb-12">
            <!-- <Image src={grantImg} alt="Grant Keller" class="w-32 h-32 mx-auto rounded-full" /> -->
            <h1 class="text-left">
              <span class="block text-6xl">Grant Keller </span><span
                class="text-3xl">Senior Software Engineer</span
              >
            </h1>
            <p class="mb-8 text-xl">+ Hardware Tinkerer & Maker</p>

            <div class="flex gap-2">
              <div class="block">
                <Pill>Web - Frontentd & UX</Pill>
              </div>
              <div class="block">
                <Pill>AI - Python</Pill>
              </div>
              <div class="block">
                <Pill>Embedded - C++</Pill>
              </div>
            </div>
          </div>

          <div class="block mb-12">
            <Image
              src={grantImg}
              alt="Grant Keller"
              class="w-32 h-32 mx-auto rounded-full"
            />
          </div>

          <div class="block mb-12">
            <Jobs />
          </div>

          <div class="block mb-12">
            <Projects />
          </div>

          <div class="relative z-50 block">
            <SkillsGrid />
          </div>

          <div class="grid grid-cols-3">
            <div>
              <h3>protects scientific specimens</h3>
            </div>
            <div>
              <h3>protects scientific specimens</h3>
            </div>
            <div>
              <h3>protects scientific specimens</h3>
            </div>
          </div>
          <p>
            From the deepest ocean abyss
            <span class="block">to listening beyond the Milky Way</span>
            <span class="block"
              >to serving breaking news to 10+ million visitors</span
            >

            <span class="block mt-8"
              >Grant crafts the code that makes your project a stylish success.</span
            >
          </p>
        </div>
      </div>
      <div class="relative flex flex-row w-full px-4 py-4 bg-black">
        <div>
          <Image
            src={nasaLogo}
            alt="NASA JPL Logo"
            class="relative block object-contain h-20"
          />
        </div>
        <div>
          <Image
            src={nhmLogo}
            alt="Natural History Museum of Los Angeles Logo"
            class="relative block object-contain h-20"
          />
        </div>
      </div>
      <div class="absolute top-0 left-0 z-0 w-full h-full overflow-hidden bg">
        <span
          class="absolute top-0 left-0 z-10 w-full h-full bg-black opacity-80"
        ></span>
        <span class="absolute top-0 left-0 w-full h-full">
          <Image
            src={bgImage}
            alt="Background"
            class="object-cover w-full h-full"
          />
        </span>
      </div>
    </section>

    <section class="relative z-10 block overflow-hidden">
      <FishHero />
    </section>
  </main>

  <style>
    main {
      margin: auto;
      max-width: 100vw;
      font-size: 14px;
      line-height: 1.6;
    }
    .astro-a {
      position: absolute;
      top: -32px;
      left: 50%;
      transform: translatex(-50%);
      width: 220px;
      height: auto;
      z-index: -1;
    }
    h1 {
      /* font-size: 4rem; */
      /* font-weight: 700; */
      /* line-height: 1;
    text-align: center;
    margin-bottom: 1em; */
    }
    /* .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  } */
    .instructions {
      margin-bottom: 2rem;
      border: 1px solid rgba(var(--accent-light), 25%);
      background: linear-gradient(
        rgba(var(--accent-dark), 66%),
        rgba(var(--accent-dark), 33%)
      );
      padding: 1.5rem;
      border-radius: 8px;
    }
    .instructions code {
      font-size: 0.8em;
      font-weight: bold;
      background: rgba(var(--accent-light), 12%);
      color: rgb(var(--accent-light));
      border-radius: 4px;
      padding: 0.3em 0.4em;
    }
    .instructions strong {
      color: rgb(var(--accent-light));
    }
    .link-card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
      gap: 2rem;
      padding: 0;
    }
  </style>
</Layout>
